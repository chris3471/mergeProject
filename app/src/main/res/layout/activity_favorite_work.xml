<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:backgroundTint="#ffffff"
        android:layout_margin="20dp" />

    <!-- 제목 -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인기 특기 추천"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/subTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(2024년 10월말 기준)"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp" />

    <!-- 이미지와 순위 -->
    <LinearLayout
        android:id="@+id/topRankLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">

        <!-- Top 1 이미지와 텍스트 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="8dp"
                android:scaleType="centerCrop" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top 1"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Top 2 이미지와 텍스트 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="8dp"
                android:scaleType="centerCrop" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top 2"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Top 3 이미지와 텍스트 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="8dp"
                android:scaleType="centerCrop" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top 3"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 지원 현황 -->
    <TextView
        android:id="@+id/supportStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지원현황"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp" />

    <!-- 군별 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/armyButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="육군"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/navyButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="해군"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/airForceButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="공군"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/rokmcButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="해병대"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- 지원 현황 리스트 -->
    <LinearLayout
        android:id="@+id/supportStatusList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:padding="16dp" />

</LinearLayout>
